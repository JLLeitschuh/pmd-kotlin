<?xml version="1.0"?>

<ruleset name="Deprecated Code"
         xmlns="http://pmd.sourceforge.net/ruleset/2.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://pmd.sourceforge.net/ruleset/2.0.0 http://pmd.sourceforge.net/ruleset_2_0_0.xsd">
    <description>
        The Deprecated Code ruleset.
    </description>

    <rule name="EnumEntryUsesDeprecatedOrNoDelimiter"
          language="kotlin"
          message="Enum entry {0} should have a correct delimiter ''{1}'' after it"
          class="org.jetbrains.pmdkotlin.lang.kotlin.rule.deprecated.EnumDelimiter">

        <description>
            Enum entry should have a correct delimiter after it
        </description>

        <priority>3</priority>

        <example>
            <![CDATA[
            ]]>
        </example>
    </rule>

    <rule name="DeprecatedStaticAssert"
          language="kotlin"
          message="Static type assertions are deprecated, consider using a cast instead"
          class="org.jetbrains.pmdkotlin.lang.kotlin.rule.deprecated.DeprecatedStaticAssert">

        <description>
            Static type assertions are deprecated, consider using a cast instead.
        </description>

        <priority>3</priority>

        <example>
            <![CDATA[
            ]]>
        </example>
    </rule>


</ruleset>